@model Bootstrap.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@*<hgroup class="title">
        <h1>@ViewBag.Title.</h1>
    </hgroup>*@

<div class="blur">
    @*<div class="image-front">*@

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
            {
                <h2 class="form-signin-heading">Please sign in.</h2>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                @Html.LabelFor(m => m.UserName, new { @class = "sr-only" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.UserName)

                @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        Remember me
                    </label>

                </div>
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Log in" />

                <br />
                <p>
                    @Html.ActionLink("Register", "Register") if you don't have an account.
                </p>
            }

    @*</div>*@



</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/background-blur.css" rel="stylesheet" />
}
